textarea.noresize {
  resize: none; 
}

.file-group input[type="file"] {
	display: none;
}

.table > tbody > tr > td > button.btn {
	margin-right: 5px;
}

/** fieldset */
fieldset {
	border: 1px solid #ddd !important;
	padding: 15px !important;
	width: 100%;
	margin-bottom: 10px;
}

fieldset legend {
	font-size: 1.2em !important;
	font-weight: bold !important;
	text-align: left !important;
	width: auto;
	border-bottom: none;
	margin-bottom: 0px;
}


/** accordion */
.accordion-style.panel-group {
	margin-bottom: 0;
}

.accordion-style.panel-group .panel-default input {
	vertical-align: sub;
}

.accordion-style .panel-default>.panel-heading {
	background-image: none;
}

.accordion-style.panel-group .panel {
	border-radius: 0;
	border-color: #cdd8e3;
	background-color: #FFF;
	box-shadow: none;
	border-width: 0;
}

.accordion-style.panel-group .panel:last-child {
	border-bottom-width: 0;
}

.accordion-style.panel-group .panel .collapse {
	background-color: #FFF;
}

.accordion-style.panel-group .panel+.panel {
	margin-top: 4px;
}

.accordion-style.panel-group .panel .panel-body {
	border-top: none;
	padding: 5px;
}

.accordion-style.panel-group .panel-heading+.panel-collapse .panel-body
	{
	border-top-color: #cdd8e3 !important;
}

.accordion-style.panel-group .panel-heading {
	padding: 0;
}

.accordion-style.panel-group .panel-heading .accordion-toggle,.accordion-style.panel-group .panel-heading .accordion-type {
	color: #4c8fbd;
	position: relative;
	font-weight: bold;
	font-size: 13px;
	line-height: 1;
	padding: 10px;
	display: block;
	background-color: #EDF3F7;
	border: 2px solid #6EAED1;
	border-width: 0 0 0 2px;
}

.panel-heading .accordion-toggle:after {
    font-family: 'Glyphicons Halflings';
    content: "\e114";
    float: right;
    color: grey;
}

.panel-heading .accordion-toggle.collapsed:after {
    content: "\e080";
}

.accordion-style.panel-group .panel-heading .accordion-toggle:hover {
	color: #6ea6cc;
	background-color: #f1f8fd;
	text-decoration: none;
}

.accordion-style.panel-group .panel-heading .accordion-toggle.collapsed
	{
	font-weight: normal;
	background-color: #F3F3F3;
	color: #606060;
	border-width: 0 0 0 1px;
	border-color: #D9D9D9;
}

.accordion-style.panel-group .panel-heading .accordion-toggle.collapsed:hover
	{
	background-color: #F6F6F6;
	color: #438EB9;
	text-decoration: none;
}

.accordion-style.panel-group .panel-heading .accordion-toggle:focus,
	.accordion-style.panel-group .panel-heading .accordion-toggle:active {
	outline: none;
	text-decoration: none;
}

.accordion-style.panel-group .panel-heading .accordion-toggle>[class*="icon-"]:first-child
	{
	width: 16px;
}

.accordion-style.panel-group .panel-heading .accordion-toggle:hover>[class*="icon-"]:first-child
	{
	text-decoration: none;
}

.accordion-style.panel-group .panel-body, .accordion-style.panel-group .collapse.in>.panel-body
	{
	border-top: 1px solid #cdd8e3;
	border-top: none;
}

.accordion-style.panel-group.no-padding {
	padding: 0;
}

.accordion-style.panel-group .accordion-style.panel-group .panel {
	border-bottom: 1px dotted #D9D9D9;
}

.accordion-style.panel-group .accordion-style.panel-group .panel:last-child
	{
	border-bottom: none;
}

.accordion-style.panel-group .accordion-style.panel-group .panel .panel-heading,
	.accordion-style.panel-group .accordion-style.panel-group .panel .panel-heading .accordion-toggle
	{
	background-color: transparent;
	border-width: 0;
	font-size: 13px;
	padding-top: 6px;
	padding-bottom: 8px;
}

.accordion-style.panel-group .accordion-style.panel-group .panel .panel-heading
	{
	padding: 10px;
	padding-top: 0;
	padding-bottom: 0;
}

.accordion-style.panel-group .accordion-style.panel-group .panel .panel-heading .accordion-toggle-empty
	{
	padding: 10px;
}

.accordion-style.panel-group .accordion-style.panel-group .panel .panel-body
	{
	padding: 40px;
	padding-top: 5px;
	padding-bottom: 5px;
	border-bottom: 1px dotted #D9D9D9;
}

.accordion-style.panel-group .accordion-style.panel-group .panel .collapse.in>.panel-body:last-child
	{
	border-bottom: none;
}


/* planClassement */
.planClassement ul {
	list-style-type: none;
	padding: 0px;
	cursor: pointer;
  -webkit-user-select: none;
     -moz-user-select: none;
      -ms-user-select: none;
          user-select: none;
}

.planClassement .block-body {
	margin-left: 15px;
	margin-right: 15px;
	display: none;
}

.planClassement .active > .block-body {
	display: block;
}

.planClassement .active > .block-head .niveauClassement {
	color: #4c8fbd;
	font-weight: bold;
	display: block;
	background-color: #EDF3F7;
	border: 2px solid #6EAED1;
	border-width: 0 0 0 2px;
}

.planClassement .active > .block-head .niveauClassement:hover {
	color: #6ea6cc;
	background-color: #f1f8fd;
	text-decoration: none;
}

.planClassement .active > .block-head .niveauClassement:before {
	font-family: FontAwesome;
	content: "\f07c";
}

.planClassement .active > .block-head .niveauClassement:after {
	font-family: FontAwesome;
	content: "\f078";
	float: right;
	color: grey;
}

.typeDocument {
	padding: 5px;
	margin-left: 15px;
	border-bottom: 1px dotted #D9D9D9;
	padding: 10px;
	padding-bottom: 15px;
	margin-bottom: 0;
	margin-top: 5px;
	cursor: default;
}

.typeDocument:hover {
	color: #438EB9;
}

.typeDocument:before {
	font-family: FontAwesome;
	content: "\f15b";
	margin-right: 5px;
}

.block-typeDocument li:last-child .typeDocument {
	border-bottom: none !important;
}

.niveauClassement {
	font-weight: normal;
	background-color: #F3F3F3;
	color: #606060;
	margin-bottom: 0;
	margin-top: 5px;
	font-size: 13px;
	line-height: 1;
	padding: 15px;
	border-left: 2px solid #D9D9D9;
}

.niveauClassement:hover {
	background-color: #F6F6F6;
	color: #438EB9;
	text-decoration: none;
}

.niveauClassement:before {
	font-family: FontAwesome;
	content: "\f07b";
	margin-right: 5px;
}

.niveauClassement:after {
	font-family: FontAwesome;
	content: "\f054";
	float: right;
	color: grey;
}

.planClassement .block-btn{
	display: block;
	position: relative;
	margin-right: 45px;
}

.add-typeDocument{
	position: absolute;
	top: 10px;
	right: 0;
}

.remove-typeDocument{
	margin-right: 20px;
	float: right;
}
.edit-typeDocument{
	margin-right: 10px;
	float: right;
}

