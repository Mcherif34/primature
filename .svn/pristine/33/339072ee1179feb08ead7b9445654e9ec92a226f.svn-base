<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml"
	xmlns:th="http://www.thymeleaf.org"
	xmlns:sec="http://www.thymeleaf.org/thymeleaf-extras-springsecurity3">
<head>
<title></title>
</head>
<body>
	<th:block th:fragment="form">
		<form id="form" name="form" method="post" action="#"
			class="form-horizontal">
			
			<div class="sidemenu">
				<ul>
					<li><a class="blue" ng-click="add()"><span>Ajouter</span><img height="17px"
						src="/aman/resources/images/btn-add.png"/></a></li>
					<li><a class="blue" ng-click="edit()"><span>Modifier</span><i
							class="fa fa-pencil"></i></a></li>
					<li><a class="blue" ng-click="save()"><span>Enregistrer</span><i
							class="fa fa-save"></i></a></li>
					<li><a class="blue" ng-click="remove()"><span>Supprimer</span><img height="17px"
						src="/aman/resources/images/btn-delete.png"/></a></li>
					<li><a class="blue" ng-click="changePassword()"><span>Changer mot de passe</span><i
							class="fa fa-lock"></i></a></li>
				</ul>
			</div>
			
			<div class="panel panel-inverse" data-sortable-id="ui-widget-10">
				<div class="panel-heading">
					<div class="panel-heading-btn"></div>
					<h4 class="panel-title semi-bold"
						th:text="#{administration.user.details}"></h4>
				</div>
				<div class="panel-body">
					<fieldset ng-disabled="mode =='read'">
						<div class="row">
							<div ng-class="'col-md-6'">
								<div class="form-group">
									<label class="col-md-4 control-label"
										th:text="#{administration.user.login}"></label>
									<div class="col-md-8">
										<input type="hidden" ng-model="dto.id" readonly="readonly" />
										<input type="text" class="form-control" name="login"
											ng-disabled="dto.id != null" ng-model="dto.login"
											required="required" />
									</div>
								</div>
								<div class="form-group">
									<label class="col-md-4 control-label"
										th:text="#{administration.user.nom}"></label>
									<div class="col-md-8">
										<input type="text" class="form-control" name="nom"
											ng-model="dto.nom" required="required" />
									</div>
								</div>
								<div class="form-group">
									<label class="col-md-4 control-label">Actif</label>
									<div class="col-md-8">
										<label class="radio-inline"> <input type="radio"
											name="actif" ng-value="true" ng-model="dto.actif" /> Oui
										</label> <label class="radio-inline"> <input type="radio"
											name="actif" ng-value="false" ng-model="dto.actif" /> Non
										</label>
									</div>
								</div>

							</div>
							<div ng-class="'col-md-6'">
								<div class="form-group">
									<label class="col-md-4 control-label"
										th:text="#{administration.user.password}"></label>
									<div class="col-md-8">
										<input type="password" class="form-control" name="password"
											ng-model="dto.password" ng-required="dto.id == null"
											ng-disabled="dto.id != null" />
									</div>
								</div>
								<div class="form-group">
									<label class="col-md-4 control-label"
										th:text="#{administration.user.prenom}"></label>
									<div class="col-md-8">
										<input type="text" class="form-control" name="prenom"
											ng-model="dto.prenom" required="required" />
									</div>
								</div>

							</div>
						</div>
					</fieldset>
					<fieldset>
						<legend th:text="#{administration.user.profile.list}"></legend>
						<div class="row">
							<div class="col-md-12">
								<table id="profilesTable"
									class="table table-striped table-bordered">
									<thead>
										<tr>
											<th class="noVis"></th>
											<th class="actions noVis"></th>
											<th><th:block
													th:text="#{administration.user.profile.list.intitule}"></th:block></th>
										</tr>
									</thead>
								</table>
							</div>
						</div>
					</fieldset>
				</div>
			</div>
		</form>
		
		
		<div class="row">
				<div class="modal fade" id="changementMotPassePopup" tabindex="-1"
					role="dialog">
					<div class="modal-dialog modal-lg">
						<div class="modal-content">
							<div class="modal-header aman-blue-color">
								<button type="button" class="bootbox-close-button close"
									data-dismiss="modal" aria-hidden="true">Ã—</button>
								<h4 class="modal-title">
									<th:block th:text="#{administration.user.profile.changementMotPasse}"></th:block>
								</h4>
							</div>
							<div class="modal-body">
								<div class="bootbox-body">
									<div class="panel panel-inverse"
										data-sortable-id="ui-widget-10">
										<div class="panel-body">
											<div class="row">
											<form id="form" name="changementMotPasseForm" method="post" action="#" class="form-horizontal">
												<input type="hidden" ng-model="dto.id" />
												<div ng-class="'col-md-9'">
													<div class="form-group">
															<label class="col-md-6 control-label"> <th:block
																	th:text="#{administration.user.profile.changementMotPasse.username}"></th:block>
																<span class="asterik"> * </span>
															</label>
															<div class="col-md-6">
																<input type="text" class="form-control" name="dto.login"
																	ng-model="dto.login" ng-disabled="true" />
															</div>
														</div>
														<div class="form-group">
															<label class="col-md-6 control-label"> <th:block
																	th:text="#{administration.user.profile.changementMotPasse.password}"></th:block>
																<span class="asterik"> * </span>
															</label>
															<div class="col-md-6">
																<input type="password" class="form-control" name="password"
																	ng-model="dto.password" required="required" />
															</div>
														</div>
														<div class="form-group">
															<label class="col-md-6 control-label"> <th:block
																	th:text="#{administration.user.profile.changementMotPasse.nvPassword}"></th:block>
																<span class="asterik"> * </span>
															</label>
															<div class="col-md-6">
																<input type="password" class="form-control" name="nvPassword"
																	ng-model="dto.nvPassword" required="required" />
															</div>
														</div>
														<div class="form-group">
															<label class="col-md-6 control-label"> <th:block
																	th:text="#{administration.user.profile.changementMotPasse.confirmerNvPassword}"></th:block>
																<span class="asterik"> * </span>
															</label>
															<div class="col-md-6">
																<input type="password" class="form-control" name="nvPasswordConfirmation"
																	ng-model="dto.nvPasswordConfirmation" required="required" />
															</div>
														</div>
												</div>

											</form>
											</div>
										</div>
									</div>
								</div>
							</div>
							<div class="modal-footer">
								<button type="button" class="btn cancel aman-blue-color"
									ng-click="closeChangementMotPasse()">
									<th:block th:text="#{button.annuler}"></th:block>
								</button>
								<button type="button" class="btn aman-green-color" ng-click="confirmChange()">
									<th:block th:text="#{button.enregistrer}"></th:block>
								</button>
							</div>
						</div>
					</div>
				</div>
			</div>
			
			
	</th:block>
</body>
</html>